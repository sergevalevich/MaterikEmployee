<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/four_line_item_height"
              android:orientation="vertical"
              android:paddingBottom="@dimen/list_item_vertical_padding"
              android:paddingLeft="@dimen/list_item_side_padding"
              android:paddingRight="@dimen/list_item_side_padding"
              android:paddingTop="@dimen/list_item_vertical_padding"
              tools:background="@color/colorPrimary">

    <TextView
        android:id="@+id/employee_fullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/primary_text_size"
        android:maxLength="40"
        android:maxLines="1"
        android:textStyle="italic"
        tools:text = "Валевич Сергей Владимирович"/>

    <TextView
        android:id="@+id/employee_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/secondary_text_size"
        android:maxLength="40"
        android:maxLines="1"
        tools:text = "Шаранговича 22-45"/>

    <TextView
        android:id="@+id/employee_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/secondary_text_size"
        android:maxLength="40"
        android:maxLines="1"
        tools:text = "Лет:25"/>

    <TextView
        android:id="@+id/employee_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/secondary_text_size"
        android:maxLength="40"
        android:maxLines="1"
        tools:text = "romsolog@mail.ru"/>

    <TextView
        android:id="@+id/employee_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextLight"
        android:textSize="@dimen/secondary_text_size"
        android:maxLength="40"
        android:maxLines="1"
        tools:text = "+375296586896"/>

</LinearLayout>